<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/btn_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast" />

    <Button
        android:id="@+id/btn_crowded_toasts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crowded Toasts x 5" />

    <Button
        android:id="@+id/btn_stuck_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stuck Toast (3s)" />

    <Button
        android:id="@+id/btn_background_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="debug: Background Toast after 5s"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_cancel_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="debug: Cancel Toast"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_disable_rt"
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="debug: Disable ReToast"
        android:textColor="@android:color/holo_orange_dark" />

</LinearLayout>